process {
  executor = 'pbs'
  queue = 'workq'
  clusterOptions = '-P rnaseq_nod -N isoseq3'


  $run_ccs{
    module = ['isoseq/3.0.0-RC1-GCCcore-6.4.0']
    cpus = { 16 * task.attempt }
    memory = { 32.GB * task.attempt }
    time = { 2.h * task.attempt }
  }
  
  $run_lima{
    module = ['isoseq/3.0.0-RC1-GCCcore-6.4.0']
    cpus = { 16 * task.attempt }
    memory = { 32.GB * task.attempt }
    time = { 2.h * task.attempt }
  }

  $cluster_reads{
    module = ['isoseq/3.0.0-RC1-GCCcore-6.4.0']
    cpus = { 16 * task.attempt }
    memory = { 32.GB * task.attempt }
    time = { 2.h * task.attempt }
  }


  $polish_reads{
    module = ['isoseq/3.0.0-RC1-GCCcore-6.4.0']
    cpus = { 16 * task.attempt }
    memory = { 32.GB * task.attempt }
    time = { 2.h * task.attempt }
  }
